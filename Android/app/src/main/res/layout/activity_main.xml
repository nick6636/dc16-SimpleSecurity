        android:layout_alignEnd="@+id/on2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/on4"
        android:onClick="makeRequest"
        android:tag="5512451"
        android:layout_below="@+id/on3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/on3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/on5"
        android:onClick="makeRequest"
        android:tag="5518595"
        android:layout_below="@+id/on4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/on4" />
</RelativeLayout>
