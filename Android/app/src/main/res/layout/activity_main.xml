        android:onClick="makeRequest"
        android:tag="5510460" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/on2"
        android:onClick="makeRequest"
        android:tag="5510595"
        android:layout_below="@+id/on1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/on1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/off2"
        android:layout_alignBottom="@+id/on2"
        android:layout_alignStart="@+id/off1"
        android:layout_alignEnd="@+id/off1"
        android:onClick="makeRequest"
        android:tag="5510604" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/off3"
        android:onClick="makeRequest"
        android:tag="5510924"
        android:layout_below="@+id/off2"
        android:layout_alignStart="@+id/off2"
        android:layout_alignEnd="@+id/off2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/off4"
        android:onClick="makeRequest"
        android:tag="5512460"
        android:layout_above="@+id/on5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/off3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/off5"
        android:onClick="makeRequest"
        android:tag="5518604"
        android:layout_alignTop="@+id/on5"
        android:layout_alignStart="@+id/off4"
        android:layout_alignEnd="@+id/off4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/on3"
        android:onClick="makeRequest"
        android:tag="5510915"
        android:layout_below="@+id/on2"
